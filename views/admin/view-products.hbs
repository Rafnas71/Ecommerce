<section>
  <div class="container">
    <div class="row">
    <div class="row ml-auto pr-3">
      <a href="admin/add-product" class="btn btn-success">Add products</a>
    </div>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>

        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style ="width: 50px; height:50px" src='images/product-images/{{this._id}}.jpg'></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  </div>  
  
    
  

</section>