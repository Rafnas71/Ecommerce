
  <div class="row m-4 >
    {{#each products}}
    <div class="col-md-3 pl-6 pr-6 pr-4 p-2" style="width: 13rem; height: 13rem;" >
        <div class="card float-left"  > 
            <img style= "width:6rem;height:7rem; " class="card-img-top p-2 m-auto" src="images/product-images/{{this._id}}.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.Name}}</h5>
            <p class="card-text" style="width: 11rem;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{this.Description}}</p>
            <a href="" class="btn btn-primary">Add to cart</a>
        </div>
        </div>
    </div>    
  {{/each}}
</div>
    