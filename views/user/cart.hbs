<section>
  <div class="container">
    <div class="row">
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Item</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {{#each cartProducts}}
          <tr>
            <th scope="row">{{addOne @index}}</th>

            <td><img style="width:50px;height:50px" src="images/product-images/{{this.product._id}}.jpg" /></td>
            <td class="m-auto">{{this.product.Name}}</td>
            <td class="m-auto">{{this.product.Price}}</td>

            <td><button class="cart-item-counter m-3"
                onclick="changeQuantity('{{this._id}}','{{this.proId}}',-1,'{{../user._id}}')">-</button>
              <span id="{{this.proId}}">{{this.quantity}}</span>
              <button class="cart-item-counter m-3"
                onclick="changeQuantity('{{this._id}}','{{this.proId}}',1,'{{../user._id}}')">+</button><button
                class="btn btn-rounded btn-danger"
                onclick="removeCartProduct('{{this._id}}','{{this.proId}}')">Remove</button>
            </td>

          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray " />
    <div class="float-right mr-4">
      <h3>Total :<span id="total">{{total}}<span/></h3>
      <a href="/place-order" class="btn btn-primary"><b>Place Order</b><a />
    </div>

  </div>

</section>