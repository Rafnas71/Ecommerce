<section class="mt-4">

  <div>
    <h3 class="m-auto text-center">Enter Delivery Details</h3>
    <form method="post" action="" method="post" id="checkout-form">
      <div class="col-md-6 float-left">
        <input type="text" name="userId" value="{{user._id}}" hidden>
        <div class="form-group col-md-9">
          <label>Address</label>
          <input
            type="text"
            class="form-control"
            name="Address"
            placeholder="Address"
          />
        </div>
        <div class="form-group col-md-9">
          <label>Pincode</label>
          <input
            type="tel"
            inputmode="numeric"
            class="form-control"
            name="Pincode"
            placeholder="Pincode"
            maxlength="6"
          />
        </div>
        
        <div class="form-group col-md-9">
          <label>Mobile</label>
          <input
            type="tel"
            class="form-control"
            name="Mobile"
            placeholder="Mobile"
            maxlength="10"
          />
        </div>
        


      </div>
      <div class="col-md-6 float-left">
        <div class="pt-5">
          <div>
            <h4 class="text-success">Total Amount : RS.{{total}}</h4>
          </div>
          <br />
          <P><b>Payment Methods</b></P>
          <div class="form-check m-2">
            <input class="form-check-input" name="Payment" value="Online Payment" type="radio" >
            <label class="form-check-label">
              Online payment
            </label>
          </div>
          <div class="form-check m-2">
            <input class="form-check-input" name="Payment" value="COD" type="radio"  />
            <label class="form-check-label" >
              Cash on delivery
            </label>
          </div>

        </div>

        <div>
          <button
            type="Submit"
            class="btn btn-primary form-control col-md-9"
          >Checkout</i></button>
        </div>

      </div>
    </form>
  </div>

</section>

<script>
  $("#checkout-form").submit((e)=>{ 
    e.preventDefault()
    $.ajax({
      url:'/place-order',
      method:'post',
      data:$("#checkout-form").serialize(),
      success:(response)=>{
        console.log("ajax respponse")
        if(response.placed){
          location.href='/order-success'
        }
      }
    })
  })
</script>