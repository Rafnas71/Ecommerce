<div class="row">
  <div class="col-md-4 m-auto">
    <div class="container mt-4 pl-4">
      <h2 class="text-center">Create new Account?</h2>
      <form method="post" >
        <div class="form-group">
          <label>Name</label>
          <input
            type="text"
            class="form-control"
            name="Name"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            name="Email"
            placeholder="email"
          />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            class="form-control"
            name="Password"
            placeholder="Password"
          />
        </div>
        <a href="/login">Already have an Account?</a>
        <div>
            <button type="submit" class="btn btn-primary form-control">Signup</button>
        </div>   
      </form>
    </div>

  </div>
</div>